.list
  width 100%
  border-radius: 20px
  box-shadow:  0px 0px 4px 4px rgba(0,0,0,0.05)
  padding 20px 15px 
  margin: 10px 0 10px 0
  .wrap
    overflow: auto
    &::-webkit-scrollbar
      width: 0px
      height: 0px
    .content
      display: flex
      .item
        min-width: 200px
        .value 
          font-size: 0.9em
.card
  min-width 250px
  display: inline-block
  border-radius: 20px 
  padding 20px 15px
  margin: 10px 
  flex: 1
  .wrap
    width 250px
    .content
      .item
        display: flex
        align-items: center
        .value 
          font-size: 0.9em
.list .title,.card .title
    color:#00684a
    margin-bottom 10px
    font-weight bold
.shadow
  box-shadow:  0px 0px 4px 4px rgba(0,0,0,0.05)
  transition: box-shadow 0.3s
  cursor pointer
  &:hover
    box-shadow:  0px 0px 8px 8px rgba(0,0,0,0.07)
    .round-icon
      opacity : 1
.relative 
  position relative
.icon-pos
  position: absolute;
  right: 19px;
  top: 15px;

.item_hold
  display: inline-block
  flex: 1
  min-width 250px
  padding 0px 15px
  margin: 0px 10px 
  visibility hidden
  .crad_wrap
    width 200px