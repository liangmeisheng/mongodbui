.collectionPage
  width 100%
  height 100%
  display: flex
  flex-direction: column
  .detail
    overflow: auto
    flex: 1
    padding 0 20px
  .tabs
    height: 75px
    display: flex
    border-bottom: 1px solid rgb(231, 231, 231)
    display: flex
    align-items: center
    overflow: auto
    .tabItem
      height 100%
      width 200px
      display: flex
      // flex-direction: column
      align-items: center
      overflow: hidden
      flex-shrink: 0;
      border-right: 1px solid  rgb(244, 244, 244)
      .main
        display: flex
        flex-direction: column
        width 150px
        padding 20px
        .activeSub
          color: var(--primary-color)
        .desciption
          font-size: 13px
          color: #6f7d85
      &:hover
        cursor pointer
        .roundIcon
          opacity 1
    .activeTab
      position relative
      &:before
        position absolute
        content:''
        width 100%

        bottom:  0px
        border-bottom: 4px solid var(--primary-color)
  