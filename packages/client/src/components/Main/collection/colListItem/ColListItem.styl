$max-height=500px
.col_list_item
  border: 1px solid #a8aeab
  margin 10px 0
  overflow: hidden
  border-radius: 5px
  position relative
  max-height: $max-height
  &:hover
    .btns
      visibility: visible
  .btns
    position: absolute
    right: 20px
    top 10px
    visibility: hidden
