.app 
  width: 100%
  height: 100%
  position: relative
  .mainWrap 
    min-width: 900px
    height: 100%
    .sideBar
      height 100%
      width 300px
      .head
        background: #00684a
        display: flex
        align-items: center
        height 65px
        padding 0 20px
        color: white
        font-size: 20px
        width 100%
      .content
        height calc(100% - 75px)
        // padding 20px
        background: #f9fbfa
        overflow: auto;
    .main
      position: absolute
      top 0
      bottom 0
      right 0
      left 300px
      overflow: auto
      // padding 20px
      min-width: 700px